model Certificate {
  id                String   @id @default(cuid())
  certificateNumber String   @unique // e.g., "CERT-2025-001234"
  studentId         String
  courseId          String?
  programId         String?
  courseOfferingId  String?
  programOfferingId String?
  issuedDate        DateTime @default(now())
  completionDate    DateTime
